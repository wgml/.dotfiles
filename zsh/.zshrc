# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

autoload -U promptinit
promptinit

#setopt promptsubst
#PROMPT='$(battery) >'
#
function pdfsearch() {
find $1 -name '*.pdf' -exec sh -c "pdftotext '{}' - | grep --with-filename --label='{}' --color $2" \;
}

alias lo='GTK_THEME=Adwaita:light libreoffice'
alias steam_repair='find ~/.steam/root/ \( -name "libgcc_s.so*" -o -name "libstdc++.so*" -o -name "libxcb.so*" -o -name "libgpg-error.so*" \) -print -delete'

zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down

export GOPATH=$HOME/Programming/go/workspace
export PATH=$PATH:$HOME/Programming/go/workspace/bin

alias steam-wine="WINEPREFIX=~/wine/spelunky wine ~/wine/spelunky/drive_c/Program\ Files\ \(x86\)/Steam/Steam.exe"
alias steam-preload="LD_PRELOAD='/usr/$LIB/libstdc++.so.6 /usr/$LIB/libgcc_s.so.1 /usr/$LIB/libxcb.so.1 /usr/$LIB/libgpg-error.so' /usr/bin/steam"

# basler pylon
export PYLON_ROOT=~/Programming/C/libs/pylon5

# rust
export PATH="$HOME/.cargo/bin:$PATH"

alias weather="curl wttr.in/Krakow"

export EDITOR=vim
export VISUAL="$EDITOR"
